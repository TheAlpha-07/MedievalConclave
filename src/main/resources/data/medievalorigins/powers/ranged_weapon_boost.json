{
  "type": "origins:multiple",
  "hidden": true,

  "marksman_timer": {
    "type": "origins:resource",
    "min": 0,
    "max": 20,
    "hud_render": {
      "should_render": true
    }
  },

  "marksman_timer_countdown": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:ranged_weapon_boost_marksman_timer",
      "change": 1
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:ingredient",
                "inverted": true,
                "ingredient": {
                  "tag": "spartanweaponry:heavy_crossbows"
                }
              },
              {
                "type": "origins:enchantment",
                "inverted": true,
                "enchantment": "medievalconclave:marksman_enchantment",
                "comparison": "==",
                "compare_to": 1
              }
            ]
          }
        },
        {
          "type": "origins:origin",
          "origin": "medievalorigins:marksman",
          "layer": "origins:classes"
        }
      ]
    },
    "interval": 20
  },

