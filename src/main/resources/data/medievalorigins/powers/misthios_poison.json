{
  "type": "origins:multiple",

  "weapon_speed": {
    "type": "origins:resource",
    "min": 0,
    "max": 11,
    "hud_render": {
      "should_render": true
    }
  },
  "weapon_speed_countdown": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:misthios_poison_weapon_speed",
      "change": 1
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:or",
        "conditions": [
          {
            "type": "origins:ingredient",
            "ingredient": {
              "tag": "spartanweaponry:pikes"
            }
          },
          {
            "type": "origins:enchantment",
            "enchantment": "medievalconclave:misthios_enchantment",
            "comparison": "==",
            "compare_to": 1
          }
        ]
      }
    },
    "interval": 2
  },
  "weapon_speed_reset": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:misthios_poison_weapon_speed",
      "change": -100
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:ingredient",
            "inverted": true,
            "ingredient": {
              "tag": "spartanweaponry:pikes"
            }
          },
          {
            "type": "origins:enchantment",
            "inverted": true,
            "enchantment": "medievalconclave:misthios_enchantment",
            "comparison": "==",
            "compare_to": 1
          }
        ]
      }
    },
    "interval": 2
  },

  "attack_reset": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:delay",
      "ticks": 5,
      "action": {
        "type": "origins:change_resource",
        "resource": "medievalorigins:misthios_poison_weapon_speed",
        "change": -100
      }
    },
    "key": {
      "key": "key.attack"
    },
    "cooldown": 0,
    "hud_render": {
      "should_render": false
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:or",
        "conditions": [
          {
            "type": "origins:ingredient",
            "ingredient": {
              "tag": "spartanweaponry:pikes"
            }
          },
          {
            "type": "origins:enchantment",
            "enchantment": "medievalconclave:misthios_enchantment",
            "comparison": "==",
            "compare_to": 1
          }
        ]
      }
    }
  },


  "poison_give": {
    "type": "origins:target_action_on_hit",
    "cooldown": 100,
    "entity_action": {
      "type": "origins:apply_effect",
      "effect": {
        "effect": "minecraft:poison",
        "amplifier": 2,
        "duration": 160
      }
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:ingredient",
                "ingredient": {
                  "tag": "spartanweaponry:pikes"
                }
              },
              {
                "type": "origins:enchantment",
                "enchantment": "medievalconclave:misthios_enchantment",
                "comparison": "==",
                "compare_to": 1
              }
            ]
          }
        },
        {
          "type": "origins:resource",
          "resource": "medievalorigins:misthios_poison_weapon_speed",
          "comparison": "==",
          "compare_to": 11
        }
      ]
    }
  }
}