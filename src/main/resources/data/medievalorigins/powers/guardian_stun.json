{
  "type": "origins:multiple",
  "stun_condition": {
    "type": "origins:resource",
    "min": 0,
    "max": 2,
    "hud_render": {
      "should_render": true
    }
  },
  "weapon_speed": {
    "type": "origins:resource",
    "min": 0,
    "max": 8,
    "hud_render": {
      "should_render": true
    }
  },
  "weapon_speed_countdown": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:guardian_stun_weapon_speed",
      "change": 1
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:or",
        "conditions": [
          {
            "type": "origins:ingredient",
            "ingredient": {
              "tag": "spartanweaponry:flanged_maces"
            }
          },
          {
            "type": "origins:enchantment",
            "enchantment": "medievalconclave:guardian_enchantment",
            "comparison": "==",
            "compare_to": 1
          }
        ]
      }
    },
    "interval": 2
  },
  "weapon_speed_reset": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:guardian_stun_weapon_speed",
      "change": -100
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:ingredient",
            "inverted": true,
            "ingredient": {
              "tag": "spartanweaponry:flanged_maces"
            }
          },
          {
            "type": "origins:enchantment",
            "inverted": true,
            "enchantment": "medievalconclave:guardian_enchantment",
            "comparison": "==",
            "compare_to": 1
          }
        ]
      }
    },
    "interval": 2
  },
  "stun_buildup": {
    "type": "origins:self_action_on_hit",
    "cooldown": 0,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "medievalorigins:guardian_stun_stun_condition",
          "change": 1
        },
        {
          "type": "origins:change_resource",
          "resource": "medievalorigins:guardian_stun_weapon_speed",
          "change": -100
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "medievalorigins:guardian_stun_weapon_speed",
          "comparison": ">=",
          "compare_to": 8
        }
      ]
    }
  },


  "attack_reset": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:delay",
      "ticks": 5,
      "action": {
        "type": "origins:change_resource",
        "resource": "medievalorigins:guardian_stun_weapon_speed",
        "change": -100
      }
    },
    "key": {
      "key": "key.attack"
    },
    "cooldown": 0,
    "hud_render": {
      "should_render": false
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:or",
        "conditions": [
          {
            "type": "origins:ingredient",
            "ingredient": {
              "tag": "spartanweaponry:flanged_maces"
            }
          },
          {
            "type": "origins:enchantment",
            "enchantment": "medievalconclave:guardian_enchantment",
            "comparison": "==",
            "compare_to": 1
          }
        ]
      }
    }
  },


  "stun_give": {
    "type": "origins:target_action_on_hit",
    "cooldown": 0,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:apply_effect",
          "effect": {
            "effect": "medievalconclave:stun",
            "amplifier": 1,
            "duration": 600
          }
        },
        {
          "type": "origins:apply_effect",
          "effect": {
            "effect": "minecraft:weakness",
            "amplifier": 5,
            "duration": 600
          }
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "medievalorigins:guardian_stun_stun_condition",
          "comparison": "==",
          "compare_to": 2
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:ingredient",
                "ingredient": {
                  "tag": "spartanweaponry:flanged_maces"
                }
              },
              {
                "type": "origins:enchantment",
                "enchantment": "medievalconclave:guardian_enchantment",
                "comparison": "==",
                "compare_to": 1
              }
            ]
          }
        }
      ]
    }
  },

  "stun_loss": {
    "type": "origins:self_action_on_hit",
    "cooldown": 0,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:guardian_stun_stun_condition",
      "change": -100
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "medievalorigins:guardian_stun_stun_condition",
          "comparison": "==",
          "compare_to": 2
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:ingredient",
                "ingredient": {
                  "tag": "spartanweaponry:flanged_maces"
                }
              },
              {
                "type": "origins:enchantment",
                "enchantment": "medievalconclave:guardian_enchantment",
                "comparison": "==",
                "compare_to": 1
              }
            ]
          }
        }
      ]
    }
  },

  "out_of_combat": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "medievalorigins:guardian_stun_stun_condition",
      "change": -100
    },
    "condition": {
      "type": "origins:resource",
      "resource": "medievalorigins:out_of_combat_resource",
      "comparison": "==",
      "compare_to": 1
    },
    "interval": 10
  }
}